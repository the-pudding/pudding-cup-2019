.intro
	margin 0 auto
	padding 6rem 1rem 0 1rem
	font-family $sans

	&__overline
		margin 0
		width 15rem
		background-color $primary
		text-align center
		set-type-size(small, false)
		margin 0.5rem auto
		border-radius 3px
		color $white
		font-weight 600

	&__hed
		margin 0 auto
		padding-top 0rem
		max-width 60rem
		text-align center
		font-weight 400
		set-type-size('xx-large', true)

		+mq('bp-3')
			set-type-size('xxx-large', true)

		+mq('bp-5')
			set-type-size('xxxxx-large', true)
			font-weight 700

	&__byline
		margin 0 auto
		padding-top 5rem
		padding-bottom 1.5rem
		max-width $column-width
		text-align center
		set-type-size('small', true)

	&__dek
		margin 0 auto
		padding-top 1.5rem
		max-width $column-width
		text-align center
		set-type-size('medium', true)